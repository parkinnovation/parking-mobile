<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Size="300,200"
    xmlns:behavior="clr-namespace:Parking.Mobile.CustomComponents"
    xmlns:toolkit="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
    x:Class="Parking.Mobile.View.WhatsAppPopup">

    <Frame Padding="20" BackgroundColor="White" CornerRadius="15" WidthRequest="80">
        <StackLayout Spacing="10">
            <Label Text="Digite o número do WhatsApp" Style="{StaticResource lblInfoFlow}"/>
            <Entry x:Name="entPhone" Style="{StaticResource entFlow}" MaxLength="14" Placeholder="(99)99999-9999" Keyboard="Numeric">
                <Entry.Behaviors>
                        <behavior:MaskedBehavior Mask="(99)99999-9999" />
                    </Entry.Behaviors>
            </Entry>
           
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button Text="Cancelar" Style="{StaticResource btnCancel}" Command="{Binding CloseCommand}" CommandParameter="Cancel" HorizontalOptions="FillAndExpand"/>
                <Button Text="Enviar" Style="{StaticResource btnConfirm}" Command="{Binding CloseCommand}" CommandParameter="Send" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </StackLayout>
    </Frame>
</toolkit:Popup>
