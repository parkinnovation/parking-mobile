<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
    x:Class="Parking.Mobile.View.TicketOptionPopup">

    <Frame Padding="20" BackgroundColor="White" CornerRadius="15" WidthRequest="300">
        <StackLayout Spacing="15">

            <Label Text="Selecione uma opção" FontAttributes="Bold" HorizontalOptions="Center" />

            <Button Text="🖨️ Imprimir Ticket" Style="{StaticResource btnConfirm}" Command="{Binding ClosePopupCommand}" CommandParameter="Print" />
            <Button Text="📱 Enviar por WhatsApp" Style="{StaticResource btnConfirm}" Command="{Binding ClosePopupCommand}" CommandParameter="WhatsApp" />
            <Button Text="🚫 Sem Ticket" Style="{StaticResource btnConfirm}" Command="{Binding ClosePopupCommand}" CommandParameter="None" />

        </StackLayout>
    </Frame>
</toolkit:Popup>
