<?xml version="1.0" encoding="UTF-8" ?>

<xct:Popup
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Parking.Mobile.View.CloseCashierPage"

    Size="300,400"
    IsLightDismissEnabled="False"
    xmlns:xct="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit">
    <StackLayout Style="{StaticResource stkDefault}">
        <Label Text="Fechamento de caixa" Style="{StaticResource lblFlowItem}"/>

        
        <Label Text="" Style="{StaticResource lblInfoFlow}"/>

        <Label Text="Data de abertura" Style="{StaticResource lblInfoFlow}"/>
        <Label Text="{Binding CashierInfo.DateOpenText}" Style="{StaticResource lblFlow}"/>

        <Label Text="Sangria" Style="{StaticResource lblInfoFlow}"/>

        <Entry Keyboard="Numeric" Style="{StaticResource entFlow}" Text="{Binding CashFund}" />
       
        <StackLayout VerticalOptions="FillAndExpand" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
            <Button x:Name="btnCancel" Text="CANCELAR" HorizontalOptions="FillAndExpand" Style="{StaticResource btnCancel}" Clicked="btnCancel_Clicked"/>
            <Button x:Name="btnConfirm" Text="CONFIRMAR" HorizontalOptions="FillAndExpand" Style="{StaticResource btnConfirm}" Clicked="btnConfirm_Clicked"/>
        </StackLayout>

        <StackLayout HeightRequest="50" />

    </StackLayout>
</xct:Popup>
